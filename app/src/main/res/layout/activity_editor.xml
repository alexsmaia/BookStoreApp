<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/pad16"
    tools:context=".EditorActivity">

    <!-- Input fields -->
    <!-- Product Name field -->
    <EditText
        android:id="@+id/edit_book_product_name"
        style="@style/EditTextStyle"
        android:hint="@string/hint_book_product_name"
        android:inputType="textCapWords" />

    <!-- Price field -->
    <EditText
        android:id="@+id/edit_book_price"
        android:layout_below="@+id/edit_book_product_name"
        style="@style/EditTextStyle"
        android:hint="@string/hint_book_price"
        android:inputType="number" />

    <!-- Quantity field -->
    <EditText
        android:id="@+id/edit_book_quantity"
        android:layout_below="@+id/edit_book_price"
        style="@style/EditTextStyle"
        android:hint="@string/hint_book_quantity"
        android:inputType="number" />

    <!-- Product Supplier Name field -->
    <EditText
        android:id="@+id/edit_book_supplier_name"
        android:layout_below="@+id/edit_book_quantity"
        style="@style/EditTextStyle"
        android:hint="@string/hint_book_supplier_name"
        android:inputType="textCapWords" />

    <!-- Supplier Phone Number field -->
    <EditText
        android:id="@+id/edit_book_supplier_phone_number"
        android:layout_below="@+id/edit_book_supplier_name"
        style="@style/EditTextStyle"
        android:hint="@string/hint_book_supplier_phone_number"
        android:inputType="number" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/pad16"
        android:src="@drawable/ic_action_phone" />

</RelativeLayout>
